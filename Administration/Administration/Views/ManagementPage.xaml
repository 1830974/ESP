<Page x:Class="Administration.Views.ManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Administration.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:viewmodels="clr-namespace:Administration.ViewModels"
      d:DataContext="{d:DesignInstance Type=viewmodels:ManagementVM}"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagementPage">

    <Grid Margin="20">
        <TabControl>
            <TabItem Header="Utilisateurs" Margin="0 0 0 15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid Grid.Row="0"
                                  ItemsSource="{Binding Users}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  Margin="0 0 0 10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nom d'utilisateur" Binding="{Binding Username}" />
                                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" />
                                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" />
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                                <DataGridCheckBoxColumn Header="État" Binding="{Binding State}" />
                                <DataGridTemplateColumn Header="Actions">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Modifier"
                                                        Margin="0 0 5 0"
                                                        Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}" />
                                                <Button Content="Supprimer"
                                                        Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Grid.Row="1"
                                Content="Ajouter un utilisateur"
                                HorizontalAlignment="Center"
                                Command="{Binding AddUserCommand}"
                                Margin="0 10 0 0" />
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Tarifs"  Margin="0 0 0 15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <GroupBox Header="Tarif horaire" Margin="0 0 0 10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding HourlyRate, StringFormat=C2}"
                                         materialDesign:HintAssist.Hint="Entrez le tarif horaire" />
                                <Button Grid.Column="1" Content="Modifier"
                                        Margin="10 0 0 0"
                                        Command="{Binding UpdateHourlyRateCommand}" />
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Tarif demi-journée" Margin="0 0 0 10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding HalfDayRate, StringFormat=C2}"
                                         materialDesign:HintAssist.Hint="Entrez le tarif demi-journée" />
                                <Button Grid.Column="1" Content="Modifier"
                                        Margin="10 0 0 0"
                                        Command="{Binding UpdateHalfDayRateCommand}" />
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Tarif journée complète" Margin="0 0 0 10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding FullDayRate, StringFormat=C2}"
                                         materialDesign:HintAssist.Hint="Entrez le tarif journée complète" />
                                <Button Grid.Column="1" Content="Modifier"
                                        Margin="10 0 0 0"
                                        Command="{Binding UpdateFullDayRateCommand}" />
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Taxe provinciale" Margin="0 0 0 10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding ProvincialTaxRate, StringFormat=P2}"
                                         materialDesign:HintAssist.Hint="Entrez le taux de taxe provinciale" />
                                <Button Grid.Column="1" Content="Modifier"
                                         Margin="10 0 0 0"
                                         Command="{Binding UpdateProvincialTaxRateCommand}" />
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Taxe fédérale">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding FederalTaxRate, StringFormat=P2}"
                                         materialDesign:HintAssist.Hint="Entrez le taux de taxe fédérale" />
                                <Button Grid.Column="1" Content="Modifier"
                                        Margin="10 0 0 0"
                                        Command="{Binding UpdateFederalTaxRateCommand}" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Billets" Margin="0 0 0 15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid Grid.Row="0"
                                  ItemsSource="{Binding Tickets}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  Margin="0 0 0 10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                                <DataGridTextColumn Header="Heure d'arrivée" Binding="{Binding ArrivalTime}" />
                                <DataGridTextColumn Header="Heure de paiement" Binding="{Binding PaymentTime}" />
                                <DataGridTextColumn Header="Plaque d'immatriculation" Binding="{Binding LicensePlate}" />
                                <DataGridTextColumn Header="État" Binding="{Binding State}" />
                                <DataGridTemplateColumn Header="Actions">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Supprimer"
                                                        Command="{Binding DataContext.DeleteTicketCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
