<Page x:Class="Paiement_1830974.Views.BankConfirm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Paiement_1830974"
      mc:Ignorable="d"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="18"
      TextOptions.TextFormattingMode="Ideal" 
      TextOptions.TextRenderingMode="Auto"        
      Background="#E3F2FD"
      FontFamily="{DynamicResource MaterialDesignFont}"
      d:DesignHeight="600" d:DesignWidth="1024">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Mode="Custom" Padding="16" Background="#1976D2">
            <Grid>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                           FontSize="32" Foreground="White" FontWeight="Bold">
                    Borne de paiement
                </TextBlock>
                <Button Style="{StaticResource MaterialDesignFlatButton}" 
                        Content="FR" HorizontalAlignment="Right"
                        FontSize="20" Foreground="White"
                        materialDesign:ElevationAssist.Elevation="Dp3"/>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Content -->
        <TextBlock Grid.Row="1" 
                   Text="En attente de confirmation..." 
                   FontSize="36" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Foreground="#1976D2"/>
    </Grid>
</Page>
