<Page x:Class="Paiement_1830974.Views.Reciept"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Paiement_1830974"
      mc:Ignorable="d"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="18"
      TextOptions.TextFormattingMode="Ideal" 
      TextOptions.TextRenderingMode="Auto"        
      Background="#E3F2FD"
      FontFamily="{DynamicResource MaterialDesignFont}"
      d:DesignHeight="600" d:DesignWidth="1024">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <materialDesign:ColorZone Mode="Custom" Padding="16" Background="#1976D2">
            <Grid>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                           FontSize="32" Foreground="White" FontWeight="Bold">
                    Borne de paiement
                </TextBlock>
                <Button Style="{StaticResource MaterialDesignFlatButton}" 
                        Content="FR" HorizontalAlignment="Right"
                        FontSize="20" Foreground="White"
                        materialDesign:ElevationAssist.Elevation="Dp3"/>
            </Grid>
        </materialDesign:ColorZone>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Voulez-vous un reçu ?" 
                       FontSize="36" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,40"
                       Foreground="#1976D2"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Oui" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Height="80" Width="200" 
                        FontSize="24" 
                        Margin="0,0,20,0"
                        Background="Green" 
                        Foreground="White"/>

                <Button Content="Non" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Height="80" Width="200" 
                        FontSize="24" 
                        Background="Red" 
                        Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
